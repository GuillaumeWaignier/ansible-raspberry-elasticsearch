[Unit]
Description=Auditbeat for the ELK stack

[Service]
{% if ansible_architecture == "x86_64" %}
ExecStart={{ base_directory }}/auditbeat/auditbeat/auditbeat -c {{ base_directory }}/auditbeat/config/auditbeat.yml
{% endif %}
Type=simple
User={{user}}
Group={{group}}
Restart=on-failure

[Install]
WantedBy=multi-user.target

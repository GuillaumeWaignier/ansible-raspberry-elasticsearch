[Unit]
Description=Heartbeat for the ELK stack
After=kibana.target

[Service]
ExecStart={{ base_directory }}/heartbeat/heartbeat/heartbeat -c {{ base_directory }}/heartbeat/config/heartbeat.yml
Type=simple
User={{user}}
Group={{group}}
Restart=on-failure
RestartSec=10s
StartLimitBurst=12

[Install]
WantedBy=multi-user.target
